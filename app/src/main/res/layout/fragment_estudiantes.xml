<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentsDocenteAula.estudiantesFragment">

    <Button
        android:id="@+id/btnIngresarcalificaciones"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Ingresar calificaciones"
        app:cornerRadius="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"/>

    <LinearLayout
        android:id="@+id/llaulas"
        android:layout_width="350dp"
        android:layout_height="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAulas"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#D1D1D1"
            app:cardCornerRadius="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvListadodeaulas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estudiantes:"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintHorizontal_bias="0.25"
        />

</androidx.constraintlayout.widget.ConstraintLayout>