<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentsDocenteAula.minijuegosDocenteFragment"
    android:paddingStart="40dp"
    android:paddingEnd="30dp"
    android:paddingBottom="30dp"
    android:paddingTop="30dp">

    <Button
        android:id="@+id/juego1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Juego 1"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/juego2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Juego 2"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/juego1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/juego3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Juego 3"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/juego1" />

    <Button
        android:id="@+id/juego4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Juego 4"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/juego3"
        app:layout_constraintTop_toBottomOf="@id/juego2" />

    <Button
        android:id="@+id/juego5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Juego 5"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/juego3" />

    <Button
        android:id="@+id/juego6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Juego 6"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/juego5"
        app:layout_constraintTop_toBottomOf="@id/juego4" />

    <Button
        android:id="@+id/juego7"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Juego 7"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/juego5" />

    <Button
        android:id="@+id/juego8"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Juego 8"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/juego7"
        app:layout_constraintTop_toBottomOf="@id/juego6" />

</androidx.constraintlayout.widget.ConstraintLayout>