<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    tools:context=".crearModulosDocente">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Modulo"
        style="@style/textosnegros"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="35sp"/>

    <TextView
        android:id="@+id/textView2"
        style="@style/textosnegros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Modulo:"
        android:textSize="19sp"
        android:layout_marginTop="0sp"
        android:layout_marginBottom="15sp"
        />

    <EditText
        android:id="@+id/etNombreModulo"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_input"
        android:hint="Ingrese el nombre del modulo"
        android:textColorHint="@color/gris"
        android:textColor="@color/black"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="13sp"
        android:layout_marginTop="0sp"
        android:layout_marginBottom="15sp"
        />

    <View
        android:layout_width="280dp"
        android:layout_height="0.6dp"
        android:background="@color/black"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="15sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la obra:"
        style="@style/textosnegros"
        android:textSize="19sp"
        android:layout_marginTop="0sp"
        android:layout_marginBottom="15sp"
        />

    <EditText
        android:id="@+id/etNombreObra"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_input"
        android:hint="Ingrese el nombre de la obra"
        android:textColorHint="@color/gris"
        android:textColor="@color/black"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="13sp"
        android:layout_marginTop="0sp"
        android:layout_marginBottom="15sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor de la obra:"
        style="@style/textosnegros"
        android:textSize="19sp"
        android:layout_marginTop="0sp"
        android:layout_marginBottom="15sp"/>

    <EditText
        android:id="@+id/etAutorObra"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_input"
        android:hint="Ingrese el nombre del autor(a)"
        android:textColorHint="@color/gris"
        android:textColor="@color/black"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="13sp"
        android:layout_marginTop="0sp"
        android:layout_marginBottom="15sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capítulo de la obra:"
        style="@style/textosnegros"
        android:textSize="19sp"
        android:layout_marginTop="0sp"
        android:layout_marginBottom="15sp"
        />

    <EditText
        android:id="@+id/etCapituloObra"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_input"
        android:hint="Ingrese el capítulo de la obra"
        android:textColorHint="@color/gris"
        android:textColor="@color/black"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="13sp"
        android:layout_marginTop="0sp"
        android:layout_marginBottom="15sp"
        />

    <View
        android:layout_width="280dp"
        android:layout_height="0.6dp"
        android:background="@color/black"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="15sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar Juego(s):"
        style="@style/textosnegros"
        android:textSize="19sp"
        android:layout_marginTop="0sp"
        android:layout_marginBottom="15sp"
        />

    <Button
        android:id="@+id/btnSeleccionarJuegos"
        android:layout_width="230dp"
        android:layout_height="65dp"
        android:text="SELECCIONAR JUEGOS"
        app:cornerRadius="20dp"
        />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>